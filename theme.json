{
  "$schema": "https://schemas.wp.org/wp/6.4/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#ca6666",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#b09065",
          "name": "Secondary"
        },
        {
          "slug": "dark",
          "color": "#0a0a0a",
          "name": "Dark"
        },
        {
          "slug": "darker",
          "color": "#050505",
          "name": "Darker"
        },
        {
          "slug": "light",
          "color": "#f5f5f5",
          "name": "Light"
        },
        {
          "slug": "gray",
          "color": "#333333",
          "name": "Gray"
        },
        {
          "slug": "accent",
          "color": "#e74c3c",
          "name": "Accent"
        }
      ],
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultGradients": true,
      "defaultPalette": true,
      "duotone": [],
      "gradients": [
        {
          "slug": "dark-to-darker",
          "gradient": "linear-gradient(to bottom, var(--wp--preset--color--dark), var(--wp--preset--color--darker))",
          "name": "Dark to Darker"
        },
        {
          "slug": "primary-to-accent",
          "gradient": "linear-gradient(to bottom, var(--wp--preset--color--primary), var(--wp--preset--color--accent))",
          "name": "Primary to Accent"
        }
      ],
      "link": true
    },
    "typography": {
      "customFontSize": true,
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.9rem",
          "name": "Small"
        },
        {
          "slug": "normal",
          "size": "1rem",
          "name": "Normal"
        },
        {
          "slug": "medium",
          "size": "1.3rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.8rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "2.5rem",
          "name": "X-Large"
        },
        {
          "slug": "xx-large",
          "size": "3.5rem",
          "name": "XX-Large"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "'Noto Serif JP', serif",
          "slug": "body",
          "name": "Body"
        },
        {
          "fontFamily": "'Raleway', 'Noto Serif JP', sans-serif",
          "slug": "heading",
          "name": "Heading"
        }
      ],
      "lineHeight": true
    },
    "spacing": {
      "customSpacingSize": true,
      "spacingSizes": [
        {
          "slug": "20",
          "size": "20px",
          "name": "1"
        },
        {
          "slug": "30",
          "size": "30px",
          "name": "2"
        },
        {
          "slug": "50",
          "size": "50px",
          "name": "3"
        },
        {
          "slug": "80",
          "size": "80px",
          "name": "4"
        },
        {
          "slug": "120",
          "size": "120px",
          "name": "5"
        }
      ],
      "units": [ "px", "em", "rem", "vh", "vw", "%" ]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "fontSizes": [
            {
              "slug": "normal",
              "size": "1rem",
              "name": "Normal"
            },
            {
              "slug": "medium",
              "size": "1.3rem",
              "name": "Medium"
            }
          ]
        },
        "color": {
          "background": true,
          "text": true
        }
      },
      "core/heading": {
        "typography": {
          "fontFamily": true,
          "fontStyle": true,
          "fontWeight": true,
          "letterSpacing": true,
          "lineHeight": true,
          "textDecoration": true,
          "textTransform": true
        },
        "color": {
          "background": true,
          "text": true,
          "link": true
        }
      },
      "core/button": {
        "border": {
          "radius": true
        },
        "color": {
          "background": true,
          "text": true
        },
        "typography": {
          "fontFamily": true,
          "fontSize": true,
          "fontStyle": true,
          "fontWeight": true,
          "letterSpacing": true,
          "lineHeight": true,
          "textDecoration": true,
          "textTransform": true
        }
      },
      "core/image": {
        "border": {
          "radius": true
        }
      },
      "core/cover": {
        "color": {
          "duotone": true
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--dark)",
      "text": "var(--wp--preset--color--light)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "margin": {
        "top": "0",
        "right": "0",
        "bottom": "0",
        "left": "0"
      },
      "padding": {
        "top": "0",
        "right": "0",
        "bottom": "0",
        "left": "0"
      }
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "lineHeight": "1.2",
          "fontWeight": "400",
          "letterSpacing": "3px"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "1.2",
          "fontWeight": "300",
          "letterSpacing": "3px"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "1.2",
          "fontWeight": "400"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "lineHeight": "1.2",
          "fontWeight": "400"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--normal)",
          "lineHeight": "1.2",
          "fontWeight": "500"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontSize": "var(--wp--preset--font-size--small)",
          "lineHeight": "1.2",
          "fontWeight": "500"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--accent)"
        },
        "typography": {
          "textDecoration": "none"
        },
        ":hover": {
          "typography": {
            "textDecoration": "underline"
          }
        }
      },
      "button": {
        "border": {
          "radius": "0"
        },
        "color": {
          "background": "var(--wp--preset--color--accent)",
          "text": "var(--wp--preset--color--light)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "500",
          "textTransform": "uppercase",
          "letterSpacing": "1px"
        },
        ":hover": {
          "color": {
            "background": "#c0392b",
            "text": "var(--wp--preset--color--light)"
          }
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "lineHeight": "1.7"
        },
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "top": "2rem",
            "bottom": "1rem"
          }
        }
      },
      "core/button": {
        "spacing": {
          "padding": {
            "top": "12px",
            "right": "30px",
            "bottom": "12px",
            "left": "30px"
          }
        }
      },
      "core/image": {
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "core/quote": {
        "border": {
          "left": {
            "color": "var(--wp--preset--color--accent)",
            "style": "solid",
            "width": "4px"
          }
        },
        "spacing": {
          "padding": {
            "left": "1.5rem"
          },
          "margin": {
            "top": "1.5rem",
            "bottom": "1.5rem"
          }
        },
        "typography": {
          "fontStyle": "italic"
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--preset--color--accent)"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "page-about",
      "title": "About Page",
      "postTypes": ["page"]
    },
    {
      "name": "page-events",
      "title": "Events Page",
      "postTypes": ["page"]
    },
    {
      "name": "page-equipment-list",
      "title": "Equipment List Page",
      "postTypes": ["page"]
    },
    {
      "name": "page-equipment",
      "title": "Equipment Page",
      "postTypes": ["page"]
    },
    {
      "name": "page-floor-map",
      "title": "Floor Map Page",
      "postTypes": ["page"]
    },
    {
      "name": "page-system-pricing",
      "title": "System & Pricing Page",
      "postTypes": ["page"]
    }
  ]
}
